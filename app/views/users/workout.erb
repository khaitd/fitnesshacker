<form class="form-horizontal" action="/workout" method="post">


        <div class="form-group">
            What body part do you want to work out?
          <select name="body_part">
              <% Type.all.each do |type| %>
              <option id="type_<%=type.id%>" value="<%=type.name%>"><%= type.name %></option>
              <% end %>
            </select>
        </div>

        <div class="form-group">
            <button type="submit" class="btn fulllengthbutton">SUBMIT</button>
        </div>

</form>
