<!--Display flash[:message] if available -->
<% if flash.has?(:message) %>
<div class="alert alert-dismissible alert-success animated fadeInDown">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <p><%= flash[:message] %></p>
</div>
<% end %>
<h1> Fitness Hacker </h1>

<h2>Exercises grouped by type:</h2>

<%@types.each do |type|%>
  <h3><%=type.name%></h3>
  <%type.exercises.each.with_index(1) do |exercise, i|%>
  <p><%=i%>. <%=exercise.name%></p>
  <%end%>
<%end%>
